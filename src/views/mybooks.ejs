<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>My books</title>
    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/business-casual.min.css" rel="stylesheet">
    <script>
        history.pushState(null, null, location.href);
        window.onpopstate = function () {
            history.go(1);
        };
    </script>
</head>

  <body>

    <h1 class="site-heading text-center text-white d-none d-lg-block">
      <span class="site-heading-upper text-primary mb-3">Book 4 book</span>
    </h1>


    
    <section class="page-section cta">
      <div class="container">
        <div class="row">
          <div class="col-xl-9 mx-auto">
                <div class="intro-text left-0 text-center bg-faded p-5 rounded">
                <hr>
                <h3>My Books</h3>
                <hr>
               
                
                <%for(var i=0;i<mybooks.length;i++){%>
                    <div class="intro-text left-0 text-center bg-faded p-5 rounded">
                        <b><%=mybooks[i].title%></b><br>
                        <%=mybooks[i].desc%><br>
                        <div class="col-sm-3"></div>
                        <div class="row">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-3"></div>
                            <div class="col-sm-3"></div>
                            <div class="col-sm-3">
                        
                                <form>
                                    <input type='button'value='delete'onclick="window.location.href='/check/delete/<%=mybooks[i]._id%>'" />
                                </form>
                            </div>
                        </div>
                    </div>
                    <br>
                <%}%>
                <div class="row">
                    <div class="col-sm-10"></div>
                    <div class="col-sm-2">
                        <form>
                            <input class="btn-primary" type='button'value='back'onclick="window.location.href='/check/back'" />
                        </form></div>
                </div>
                

            
            
            </div>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer text-faded text-center py-5">
      <div class="container">
        <p class="m-0 small">Copyright &copy; Your Website 2018</p>
      </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
